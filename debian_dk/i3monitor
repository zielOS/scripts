#!/bin/sh
xrandr --output DP-0 --off --output DP-1 --off --output HDMI-0 --scale 0.9x0.9 --mode 2560x1440 --pos 0x0 --rotate normal --output HDMI-1 --scale 0.9x0.9 --primary --mode 3440x1440 --pos 2304x0 --rotate normal --output HDMI-2 --scale 0.9x0.9 --mode 2560x1440 --pos 5400x0 --rotate normal --output USB-C-0 --off
